<html>
<head>
  <title>Sudoku Game</title>
  <!-- link to the CSS stylesheet -->
  <link href="/stylesheets/application.css" rel="stylesheet" type="text/css">
</head>
<body>
<h1>Life's too short for playing Sudoku</h1>
<div id="flash">
  <%= flash[:notice] %>
</div>
<div id="sudoku">
  <form action="/" method="post">
    <!-- all boxes, rows and cells -->
    <button>Check solution?</button>

	<div>
	  <!-- one div for each row -->
	  <% 3.times do |row| %>
	    <div class="row">
	      <!-- we want to create separate div elements for boxes to style them using css -->
	      <% 3.times do |box| %>
	      <div class="box">
	      <!-- each box will have 9 cells -->
	      <% 3.times do |cell_row| %>
	        <div class="cell-row">
	          <% 3.times do |cell| %>
              <%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>
              <% end %>
	        </div>
	       <% end %>
	      </div>
	     <% end %>
	    </div>
	   <% end %>
	</div>
  </form>
</div>
<div id="new">
  <form action="/new" method="post">
    <button>New Suduko Please</button>
  </form>
</div>

</body>
</html>